<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:background="@color/pink1"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bookshelf" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_stt_top10_sach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top sách: 1"
            android:textSize="26dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_ten_sach_top10_sach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên sách: Hoa Lửa"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_so_luong_top10_sach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng: 10"
            android:textSize="20dp" />

    </LinearLayout>


</LinearLayout>